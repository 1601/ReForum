{
  "name": "reforum",
  "version": "1.0.0",
  "description": "A forum application built with ReactJS, Redux, Hapi and MongoDB",
  "author": "Provash Shoumma",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shoumma/ReForum/issues"
  },
  "homepage": "https://github.com/shoumma/ReForum#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shoumma/ReForum.git"
  },
  "keywords": [
    "forum",
    "react",
    "redux",
    "hapi",
    "mongodb"
  ],
  "main": "server.js",
  "engines": {
    "node": "7.1.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "better-npm-run start",
    "start:dev": "better-npm-run start:dev",
    "build": "webpack --config webpack.prod.config.js"
  },
  "betterScripts": {
    "start": {
      "command": "node server.config.js",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3030
      }
    },
    "start:dev": {
      "command": "node server.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 8080
      }
    }
  },
  "dependencies": {
    "better-npm-run": "^0.0.13",
    "compression": "^1.6.2",
    "express": "^4.14.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.20.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.9",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.18.0",
    "css-loader": "^0.26.1",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-hot-loader": "^1.3.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2"
  }
